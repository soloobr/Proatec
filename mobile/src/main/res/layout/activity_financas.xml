<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/la1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="36dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    app:srcCompat="@mipmap/financas" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="67dp"
                    android:layout_weight="1"
                    android:autoText="false"
                    android:background="#003F51B5"
                    android:gravity="center"
                    android:text="Finanças"
                    android:textColor="@color/background_light"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:padding="5dp"
                android:theme="@style/AppTheme">

                <TextView
                    android:id="@+id/titleyer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="?actionBarSize"
                    android:padding="@dimen/appbar_padding"
                    android:text="Selecionar Ano:"
                    android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:textColor="@color/background_light" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    app:cardCornerRadius="5dp">

                    <Spinner
                        android:id="@+id/yearSelector"
                        style="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar"
                        android:layout_width="151dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:backgroundTint="@color/background_light"
                        android:scrollbarSize="10dp" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:padding="5dp"
                android:theme="@style/AppTheme">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="?actionBarSize"
                    android:padding="@dimen/appbar_padding"
                    android:text="Selecionar Mês:"
                    android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:textColor="@color/background_light" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    app:cardCornerRadius="5dp">

                    <Spinner
                        android:id="@+id/MONTHSelector"
                        style="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar"
                        android:layout_width="151dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:backgroundTint="@color/background_light"
                        android:scrollbarSize="10dp" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DFDEDE"
            android:orientation="vertical"
            android:padding="15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:id="@+id/linefaturado"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="122dp"
                        android:background="#FDFCFC"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="5dp"
                        android:paddingRight="5dp">

                        <TextView
                            android:id="@+id/txvalor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Bruto Faturado"
                            android:textAlignment="textStart"
                            android:textColor="#3F51B5"
                            android:textSize="18sp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="12dp" />

                        <TextView
                            android:id="@+id/txvalorfaturado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="R$ 000,00"
                            android:textColor="@color/background_light"
                            android:textSize="24sp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <View
                            android:id="@+id/divider2"
                            android:layout_width="336dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="?android:attr/listDivider" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="12dp" />

                        <TextView
                            android:id="@+id/txdetalhafat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Detalhar Total Faturado"
                            android:textAlignment="center"
                            android:textColor="@color/background_light"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:id="@+id/linefaturado"
                    android:layout_width="match_parent"
                    android:layout_height="191dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="167dp"
                        android:layout_height="match_parent"
                        android:background="#FDFCFC"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="0dp"
                        android:paddingRight="5dp">

                        <TextView
                            android:id="@+id/txvalorpecafat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Vendas"
                            android:textAlignment="textStart"
                            android:textColor="#FF5722"
                            android:textSize="14sp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />

                        <TextView
                            android:id="@+id/txvalorfaturadopc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$ 000,00"
                            android:textColor="@color/background_light"
                            android:textSize="20sp" />

                        <View
                            android:layout_width="146dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="?android:attr/listDivider" />

                        <TextView
                            android:id="@+id/tvdetalhafatdisp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:onClick="onClick"
                            android:text="Detalhar Vendas"
                            android:textAlignment="center"
                            android:textColor="@color/background_light"
                            android:textSize="14sp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="13dp" />

                        <TextView
                            android:id="@+id/txvalorpecafat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lucro Vendas"
                            android:textAlignment="textStart"
                            android:textColor="#FF5722"
                            android:textSize="14sp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />

                        <TextView
                            android:id="@+id/txvalorlucropc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$ 000,00"
                            android:textColor="@color/background_light"
                            android:textSize="20sp" />

                        <View
                            android:layout_width="146dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="?android:attr/listDivider" />

                        <TextView
                            android:id="@+id/tvdetalhalucropc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:onClick="onClick"
                            android:text="Detalhar Lucro"
                            android:textAlignment="center"
                            android:textColor="@color/background_light"
                            android:textSize="14sp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="13dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="167dp"
                        android:layout_height="160dp"
                        android:background="#FDFCFC"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="5dp"
                        android:paddingRight="5dp">

                        <TextView
                            android:id="@+id/txvalorpecafat2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Serviços"
                            android:textAlignment="textStart"
                            android:textColor="#FF5722"
                            android:textSize="14sp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />

                        <TextView
                            android:id="@+id/txvalormo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="R$ 000,00"
                            android:textColor="@color/background_light"
                            android:textSize="20sp" />

                        <View
                            android:id="@+id/view"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="?android:attr/listDivider" />

                        <TextView
                            android:id="@+id/tvdetalhafatdisp2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:onClick="onClick"
                            android:text="Detalhar Serviços"
                            android:textAlignment="center"
                            android:textColor="@color/background_light"
                            android:textSize="14sp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="13dp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:id="@+id/linefaturado"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:background="#FDFCFC"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="5dp"
                        android:paddingRight="5dp">

                        <TextView
                            android:id="@+id/txvalorliquido"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Liquido"
                            android:textAlignment="textStart"
                            android:textColor="#4CAF50"
                            android:textSize="18sp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="8dp" />

                        <TextView
                            android:id="@+id/txvalorfaturadoliqd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="R$ 000,00"
                            android:textColor="@color/background_light"
                            android:textSize="24sp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="8dp" />

                        <View
                            android:layout_width="336dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="?android:attr/listDivider" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="8dp" />

                        <TextView
                            android:id="@+id/txdetalhafatlqd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Detalhar Total Liquido"
                            android:textAlignment="center"
                            android:textColor="@color/background_light"
                            android:textSize="18sp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>