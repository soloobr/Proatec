<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="25dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TableLayout
            android:layout_width="344dp"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="303dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/addprod96" />

                <TextView
                    android:id="@+id/tvdescriprod"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="number"
                    android:text="Descrição do Produto:"
                    android:textSize="18sp" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerPadding="7dp"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvidprod"
                    android:layout_width="37dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="ID:"
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/txnumeroid"
                    android:layout_width="49dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="ID" />

                <TextView
                    android:id="@+id/tvdescriproduto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Descrição do Produto"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/tvqtd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="Quantidade:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtquantidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionSend"
            android:inputType="number"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tvidforne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fornecedor:"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinnerfornecedor"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/texvalor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valor Vendido:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editvalorvendido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionSend"
            android:inputType="number"
            android:singleLine="true" />

        <TextView
            android:id="@+id/texvalorpago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valor Pago:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editvalorpago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionSend"
            android:inputType="number"
            android:singleLine="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/radioButtonAvista"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="A Vista" />

                <RadioButton
                    android:id="@+id/radioButtonparcelado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Parcelado X" />
            </RadioGroup>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>