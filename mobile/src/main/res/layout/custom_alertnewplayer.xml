<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey05"
        android:dividerPadding="7dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgaddplayers"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@mipmap/usercirclegear128"
            app:civ_border_color="@android:color/transparent"
            app:civ_border_width="3dp" />


        <TextView
            android:id="@+id/tvname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Adicionar Player"
            android:textAlignment="center"
            android:textColor="@color/white1"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="25dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/tvactionplayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Excluir Player?"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txnomep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/ednomePlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="textCapWords|textCapSentences"
            android:maxLength="20"
            android:minHeight="48dp"
            android:textAlignment="center"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutButtonsPlayers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btncancel"
                android:layout_width="173dp"
                android:layout_height="60dp"
                android:background="@drawable/round_button"
                android:elevation="1dp"
                android:focusableInTouchMode="false"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Cancelar"
                android:textColor="@color/colorAccent" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="173dp"
                android:layout_height="60dp"
                android:background="@drawable/round_button"
                android:elevation="1dp"
                android:focusableInTouchMode="false"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="onClickSAVE"
                android:padding="5dp"
                android:text="SALVAR"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>